{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "public": true,
  "redirects": [
    {
      "source": "/tools",
      "destination": "/",
      "permanent": true
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/sitemap.xml",
      "destination": "/api/sitemap.xml"
    },
    {
      "source": "/robots.txt",
      "destination": "/api/robots.txt"
    },
    {
      "source": "/ai-data.json",
      "destination": "/api/ai-data"
    },
    {
      "source": "/ai-manifest.json",
      "destination": "/api/ai-manifest"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
